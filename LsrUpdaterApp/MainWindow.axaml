
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="LsrUpdaterApp.MainWindow"
        Title="LsrUpdaterApp" Width="700" Height="600">

	<StackPanel Margin="20">
		<TextBlock Text="Дистанционная перепрошивка ЛСР" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,20"/>
		<Button Content="Выбрать файл прошивки" Name="btnSelectFirmware" Margin="0,0,0,10"/>
		<TextBox Watermark="IP-адрес считывателя" Name="txtIpAddress" Margin="0,0,0,10"/>
		<Button Content="Старт перепрошивки" Name="btnStartUpdate" Margin="0,0,0,10"/>
		<TextBox Name="txtLog" AcceptsReturn="True" Height="250" IsReadOnly="True"/>
	</StackPanel>

</Window>